<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:orientation="vertical"
    android:fillViewport="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="NJ Realtor Exam App Instructions"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textSize="32dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/iv_testImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="visible"
        android:src="@mipmap/videoimg11"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>

    <Button
        android:id="@+id/btn_flashcards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Flachcards"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button" />

    <Button
        android:id="@+id/btn_takeTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Take Test"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button" />

    <Button
        android:id="@+id/btn_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Leaderboard"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Settings"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button" />

    <Button
        android:id="@+id/btn_devInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Dev Info"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button" />


    <Button
        android:id="@+id/btn_back2Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Menu"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button" />

</LinearLayout>