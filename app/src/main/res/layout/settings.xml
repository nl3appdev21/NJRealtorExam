<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:text=" Settings "
                android:textStyle="bold"
                android:textColor="@color/White"
                android:textSize="32dp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/iv_testImage"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:visibility="visible"
                android:src="@mipmap/changingears00"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/Gray_08"
                android:layout_marginTop="8dp"/>

            <Switch android:id="@+id/randSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:text="Randomize Flashcards  "/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/Gray_08"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"/>

            <Switch android:id="@+id/nextCardSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text="Skip A Flashcard  "/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/Gray_08"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Switch android:id="@+id/advirtisingSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:text=" Advertising Cards  "/>

                <Switch android:id="@+id/commissionSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:text=" Commission Cards  "/>

                <Switch android:id="@+id/lawSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:text=" Law Cards  "/>

                <Switch android:id="@+id/mortgageSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:text=" Mortgage Cards  "/>

                <Switch android:id="@+id/newTypeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:text=" New Type Cards  "/>

                <Switch android:id="@+id/ownershipSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:text=" Ownership Cards  "/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/Gray_08"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>