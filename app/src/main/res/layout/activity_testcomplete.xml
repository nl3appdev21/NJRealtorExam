<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_passFail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="42dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/realestate"/>

    <TextView
        android:id="@+id/tv_testResults1"
        android:text=" you ? "
        android:paddingLeft="10dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="2dp"
        android:layout_marginHorizontal="12dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_testResults2"
        android:text=" score 00 % "
        android:paddingLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="21dp"
        android:layout_marginHorizontal="12dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_takeTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_gravity="center"
        android:text="Take Test Again"/>

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_gravity="center"
        android:text="Goto Menu"/>

</LinearLayout>