<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/question"
        android:layout_alignParentTop="false"
        android:layout_marginTop="21sp"
        android:layout_marginHorizontal="10dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question"/>

    <Button
        android:id="@+id/answer_0"
        android:layout_margin="4dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/question"
        android:text="Answer _0"/>

    <Button
        android:id="@+id/answer_1"
        android:layout_margin="4dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/answer_0"
        android:text="Answer _1"/>

    <Button
        android:id="@+id/answer_2"
        android:layout_margin="4dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/answer_1"
        android:text="Answer _2"/>

    <Button
        android:id="@+id/answer_3"
        android:layout_margin="4dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/answer_2"
        android:text="Answer _3" />

    <TextView
        android:id="@+id/details"
        android:gravity="center"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_3"
        android:visibility="invisible"
        android:text=" Show Me The Details !!! "/>

    <TextView
        android:id="@+id/tryagain"
        android:gravity="center"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@id/details"
        android:text=" Lamont U Big Dummy, Try Again ! "/>

    <Button
        android:id="@+id/main_menu"
        android:layout_margin="4dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@id/tryagain"
        android:text=" Main Menu " />

    <Button
        android:id="@+id/next"
        android:layout_margin="4dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@id/main_menu"
        android:text=" Next Question " />

</RelativeLayout>