<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_version_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="build 2"
        />

    <ImageView
        android:id="@+id/iv_copyright"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:visibility="visible"
        android:src="@mipmap/nl3a00"
        android:layout_marginBottom="12sp"/>

    <TextView
        android:id="@+id/tv_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:text=
            ' CREDITS \n \n
	CONCEPT \n
	NJ Realtor Exam :Design Concept \n
	Nash "Skip" Ingram :Lead Developer \n
	Dex DFX :Consultant '

        android:textStyle="bold"
        android:textSize="17dp"
        android:padding="3dp"
        android:layout_marginBottom="12dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="17dp"
        android:padding="3dp"
        android:layout_marginBottom="12dp"
        android:text=" this is for the ver number ! "
        android:visibility="visible" />


    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:text=
            " Copyright Â© 2019 - 2021 \n \n
	NL3 Solutions \n
	NJ Real Estate Exam \n \n
    For support email:  "

        android:textStyle="bold"
        android:textSize="17dp"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="21dp"
        android:padding="4dp"
        android:layout_marginBottom="3dp"
        android:autoLink="email"
        android:linksClickable="true"
        android:textColor="@color/White"
        android:text="Nash@NL3Solutions.com" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="21dp"
        android:padding="4dp"
        android:layout_marginBottom="32dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:textColor="@color/White"
        android:text="www.NL3Solutions.com" />

    <Button
        android:id="@+id/btn_back2Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goto Menu"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        android:background="@drawable/rounded_button" />

</LinearLayout>