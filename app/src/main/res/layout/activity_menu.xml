<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_testImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="visible"
        android:src="@mipmap/cubeshome"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="12sp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/iv_directions"
            android:visibility="gone"
            android:src="@mipmap/directions"/>

    <Button
        android:id="@+id/btn_testInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Instructions"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        android:background="@drawable/rounded_button" />

    <Button
        android:id="@+id/btn_takeTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Test"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_gravity="right|bottom"
        android:layout_marginLeft="10dp"
        android:layout_margin="12dp"
        android:orientation="horizontal">

     <TextView
         android:id="@+id/tv_montra"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text=" this is my pitch "
         android:layout_marginRight="21dp"
         android:textColor="@color/White"
         android:textSize="21dp"
         android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibtn_logo"
            android:layout_width="59dp"
            android:layout_height="32dp"
            android:src="@mipmap/nl3a" />

     </LinearLayout>

</FrameLayout>