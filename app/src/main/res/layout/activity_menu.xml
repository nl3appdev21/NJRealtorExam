<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_testImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="visible"
        android:src="@mipmap/realestate"
        android:layout_marginBottom="12sp"/>

    <TextView
        android:id="@+id/tv_directions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=" show me the directions !"
        android:textStyle="bold"
        android:textSize="17dp"
        android:padding="12dp"
        android:layout_marginBottom="21dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_testInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Instructions"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        android:background="@drawable/rounded_button" />

    <Button
        android:id="@+id/btn_takeTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Test"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_button" />

</LinearLayout>